<Window x:Class="CheckUser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AD Group Membership Checker" Height="450" Width="700">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Username input and Check button -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBox x:Name="txtUsername" Width="200" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <Label  Content="use domain\username format" VerticalAlignment="Center" Margin="0,0,10,0"/>            
            <Button Content="Check Groups" Click="BtnCheck_Click" Padding="10,5" Margin="5,0,5,0"/>
            <Button Content="Save to File" Click="BtnSave_Click" Padding="10,5" IsEnabled="False" x:Name="btnSave"/>
        </StackPanel>

        <!-- List of groups -->
        <ListBox x:Name="lstGroups" Grid.Row="1"/>

        <!-- Status message -->
        <TextBlock x:Name="txtStatus" Grid.Row="2" Margin="0,10,0,0" Foreground="Red"/>

        <!-- Save confirmation or info -->
        <TextBlock x:Name="txtSaveInfo" Grid.Row="3" Margin="0,5,0,0" Foreground="Green" FontStyle="Italic"/>
    </Grid>
</Window>